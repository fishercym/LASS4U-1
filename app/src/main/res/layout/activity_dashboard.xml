<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape">

    <ImageView
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/lass"
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="@+id/linearLayout13"
        android:layout_marginTop="4dp" />

    <ImageView
        custom:srcCompat="@mipmap/qr_code"
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="96dp"
        android:onClick="onScan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        custom:srcCompat="@mipmap/cht"
        android:id="@+id/imageView2"
        app:layout_constraintRight_toLeftOf="@+id/imageButton"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toRightOf="@+id/linearLayout13"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toLeftOf="@+id/imageView"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:id="@+id/linearLayout13">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <farm.rododo.lass4u.GaugeView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/mCH1"
                android:background="#fea086"
                android:layout_weight="1"
                android:layout_margin="4dp"
                custom:name="溫度"
                app:unit="℃"></farm.rododo.lass4u.GaugeView>

            <farm.rododo.lass4u.GaugeView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/mCH2"
                android:background="#FF52A5A9"
                android:layout_weight="1"
                android:layout_margin="4dp"
                app:name="濕度"
                app:unit="%"></farm.rododo.lass4u.GaugeView>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <farm.rododo.lass4u.MeterView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/mCH4"
                android:background="#FF4A904A"
                android:layout_weight="1"
                android:layout_margin="4dp"
                app:name="二氧化碳 (CO²)"
                app:unit="ppm"
                app:degress="10,500,800,1000"></farm.rododo.lass4u.MeterView>

            <farm.rododo.lass4u.MeterView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#e263be"
                android:layout_weight="1"
                android:layout_margin="4dp"
                app:name="細懸浮微粒 (PM2.5)"
                app:unit="ug/m³"
                app:degress="10,35,53,71"
                android:id="@+id/mCH3"></farm.rododo.lass4u.MeterView>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout16"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout15"
        app:layout_constraintRight_toRightOf="@+id/linearLayout15">

        <TextView
            android:text="CO:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView16"
            android:layout_weight="1"
            android:gravity="left"
            android:textSize="24sp" />

        <TextView
            android:text="0.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mCH8"
            android:layout_weight="1"
            android:textSize="24sp"
            android:gravity="right"
            android:layout_marginLeft="16dp"
            android:textColor="#FF303F9F" />

        <TextView
            android:text="ppm"
            android:layout_height="wrap_content"
            android:id="@+id/textView17"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:textSize="24sp"
            android:gravity="right"
            android:layout_width="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout17"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintRight_toRightOf="@+id/imageView">

        <TextView
            android:text="PM1.0:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView20"
            android:layout_weight="1"
            android:gravity="left"
            android:textSize="24sp" />

        <TextView
            android:text="0.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mCH5"
            android:layout_weight="1"
            android:textSize="24sp"
            android:gravity="right"
            android:layout_marginLeft="16dp"
            android:textColor="#FF303F9F" />

        <TextView
            android:text="ug/m³"
            android:layout_height="wrap_content"
            android:id="@+id/textView21"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:textSize="24sp"
            android:gravity="right"
            android:layout_width="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout14"
        app:layout_constraintRight_toRightOf="@+id/linearLayout16"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout16">

        <TextView
            android:text="tVOC:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView15"
            android:layout_weight="1"
            android:gravity="left"
            android:textSize="24sp" />

        <TextView
            android:text="0.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mCH7"
            android:layout_weight="1"
            android:textSize="24sp"
            android:gravity="right"
            android:layout_marginLeft="16dp"
            android:textColor="#FF303F9F" />

        <TextView
            android:text="ppm"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:textSize="24sp"
            android:gravity="right"
            android:layout_width="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout15"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout17"
        app:layout_constraintRight_toRightOf="@+id/linearLayout17">

        <TextView
            android:text="PM10:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView18"
            android:layout_weight="1"
            android:gravity="left"
            android:textSize="24sp" />

        <TextView
            android:text="0.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mCH6"
            android:layout_weight="1"
            android:textSize="24sp"
            android:gravity="right"
            android:layout_marginLeft="16dp"
            android:textColor="#FF303F9F" />

        <TextView
            android:text="ug/m³"
            android:layout_height="wrap_content"
            android:id="@+id/textView19"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:textSize="24sp"
            android:gravity="right"
            android:layout_width="wrap_content" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>